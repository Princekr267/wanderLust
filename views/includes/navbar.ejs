<style>
  .search-btn {
    color: #fff;
    background-color: #fe424d;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 30px;
    height: 45px;
    width: 45px;
  }
  
  .search-btn:hover {
    color: #fff;
    background-color: #fe424d;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
    border: none;
  }
  
  .search-inp:focus {
    box-shadow: none;
  }

  .search-box {
    border-radius: 50px;
    padding: 10px;
    height: 63px;
    align-items: center;
    justify-items: center;
    transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
  }
  
  .search-box:focus-within {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
  }
  
  .search-box.active {
    border-color: #86b7fe;
    box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
  }
  
  .search-box-btn {
    border-radius: 50px;
    padding: 10px;
    height: 56px;
    align-items: center;
    justify-items: center;
    justify-content: center;
    display: none !important;
    margin: 0 auto !important;
  }

  .search-box-btn i {
    font-size: 15px;
  }

  .search-text {
    font-weight: 400;
    margin: 0;
  }

  #menuBtn {
    background-color: #fff;
  }

  #menuBtn:hover {
    background-color: rgba(34, 34, 34, 0.1);
  }

  .nav-toggle {
    background-color: rgba(34, 34, 34, 0.1);
    height: 40px;
    width: 40px;
    border-radius: 50%;
    display: flex;
    border: 0;
    justify-content: center;
    align-items: center;
  }

  .nav-tog-icon {
    font-size: 1rem;
  }

  .nav-toggle:hover {
    background-color: rgba(34, 34, 34, 0.1);
  }

  .popup-menu {
    display: flex;
    flex-wrap: wrap;
    background: white;
    border-radius: 12px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s, visibility 0.3s;
    color: black;
    text-decoration: none;
    position: absolute;
    right: -5%;
    transform: translateX(-50%);
    top: 80%;
    width: 10rem;
  }

  .popup-menu a {
    border-radius: 12px;
    transition: background-color 0.3s;
  }

  .popup-menu a:hover {
    background-color: rgba(34, 34, 34, 0.15);
  }

  .popup-menu.active {
    opacity: 1;
    visibility: visible;
  }

  .host {
    margin-right: 1rem;
    border-radius: 25px;
    transition: background-color 0.3s;
  }

  .host:hover {
    background-color: rgba(34, 34, 34, 0.15);
  }

  @media screen and (max-width: 768px) {
    .host {
      display: none;
      margin: 0;
    }

    .search-inp {
      padding: 0 0 0 1rem;
    }
  }

  @media screen and (max-width: 480px) {
    .search-box-div {
      display: none !important;
      width: 100% !important;
      position: absolute;
      left: 0;
      top: 0;
      padding: 10px;
      background-color: #fff;
      z-index: 1000;
      opacity: 0;
      transform: translateY(-20px);
      transition: opacity 0.3s ease, transform 0.3s ease;
    }
    
    .search-box-div.active {
      display: block !important;
      opacity: 1;
      transform: translateY(0);
    }

    .search-box {
      width: 100% !important;
      box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
    }
    
    .search-box.active {
      display: flex !important;
      border-color: #86b7fe !important;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25) !important;
    }

    .search-box-btn {
      display: flex !important;
      position: absolute;
      left: 50%;
      transform: translateX(-50%);
      transition: opacity 0.3s ease;
      width: 50% !important;
    }
    
    .search-box-btn.hidden {
      opacity: 0;
      pointer-events: none;
    }

    .explore {
      display: none;
    }
  }
</style>

<nav class="navbar navbar-expand bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <div class="navbar-nav">
      <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
      <a class="nav-link explore" href="/listings">Explore</a>
    </div>
    
    <div class="w-50 search-box-div">
      <form class="ms-auto" role="search" action="/listings/search" method="GET">
        <div class="search-box d-flex form-control">
          <input class="form-control me-2 search-inp" type="text" name="q" placeholder="Start your search" />
          <button class="btn search-btn" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>
          </button>
        </div>
      </form>
    </div>
    
    <button class="form-control search-box-btn shadow bg-body-tertiary">
      <i class="fa-solid fa-magnifying-glass ms-2"></i>
      <p class="ms-2 me-2 search-text">Start your search</p>
    </button>
    
    <div class="navbar-nav ms-3 me-3">
      <a class="nav-link host" href="/listings/new">Become a host</a>
      <button class="nav-toggle" id="menuBtn" type="button">
        <i class="fa-solid fa-bars nav-tog-icon"></i>
      </button>
      <div class="popup-menu card" id="popupMenu">
        <% if(!currUser){ %>
          <a class="nav-link" href="/signup">Sign up</a>
          <a class="nav-link" href="/login">Log in</a>
        <% } else{ %>
          <a class="nav-link" href="/logout">Log out</a>
          <a class="nav-link" href="/profile">Profile</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>

<script>
  const menuBtn = document.getElementById('menuBtn');
  const popupMenu = document.getElementById('popupMenu');

  menuBtn.addEventListener('click', () => {
    popupMenu.classList.toggle('active');
  });

  document.addEventListener('click', (e) => {
    if (!menuBtn.contains(e.target) && !popupMenu.contains(e.target)) {
      popupMenu.classList.remove('active');
    }
  });

  const hostBtn = document.querySelector(".host");

  function handleResize() {
    const hostInPopup = popupMenu.querySelector('.host');
    
    if (window.innerWidth <= 768) {
      if (!hostInPopup) {
        const hostBtnClone = hostBtn.cloneNode(true);
        hostBtnClone.style.display = "block";
        popupMenu.insertBefore(hostBtnClone, popupMenu.firstChild);
      }
    } else {
      if (hostInPopup) {
        hostInPopup.remove();
      }
    }
  }

  handleResize();
  window.addEventListener('resize', handleResize);

  const searchBoxBtn = document.querySelector(".search-box-btn");
  const searchBox = document.querySelector(".search-box");
  const searchBoxDiv = document.querySelector(".search-box-div");
  const searchInp = document.querySelector(".search-inp");

  searchBoxBtn.addEventListener("click", () => {
    searchBoxBtn.classList.add("hidden");
    searchBoxDiv.classList.add("active");
    searchBox.classList.add("active");
    setTimeout(() => {
      searchInp.focus();
    }, 100);
  });

  document.addEventListener('click', (e) => {
    const isClickInsideSearch = searchBoxDiv.contains(e.target) || searchBoxBtn.contains(e.target);
    
    if (!isClickInsideSearch && searchBoxDiv.classList.contains('active')) {
      searchBoxDiv.classList.remove('active');
      searchBox.classList.remove('active');
      searchBoxBtn.classList.remove('hidden');
    }
  });
</script>