<% layout('/layouts/boilerplate') -%>

    <style>
        #filters{
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }
        .types {
            display: flex;
            flex-wrap: wrap;
            align-items: center;
        }

        .filter {
            margin-top: 2rem;
            text-align: center;
            margin-right: 2em;
            opacity: 0.7;
        }

        .filter:hover {
            opacity: 1;
            cursor: pointer;
        }

        .filter p {
            font-size: 0.8rem;
        }

        .tax-info{
            display: none;
        }
        .tax-toggle{
            border: 1px solid black;
            border-radius: 1rem;
            height: 3.25rem;
            padding: 1rem;
            margin-left: 4rem;
            display: flex;
            align-items: center;
        }
        .tax-toggle-menu{
            border: none;
            border-radius: 12px;
            padding: 0.5rem 0.75rem;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            transition: background-color 0.3s;
        }
        .tax-toggle-menu:hover{
            background-color: rgba(34, 34, 34, 0.15);
        }
        .tax-toggle-menu .form-check-label{
            margin: 0;
            font-size: 0.9rem;
            color: #222222;
        }
        a{
            text-decoration: none;
            color: inherit;
        }
        
        @media screen and (max-width: 768px) {
            .tax-switch{
                display: none;
            }    
        }
    </style>
    <!-- <h3 class="mt-3">All listings</h3> -->
    <!-- <form action="/listings/new">
        <button>Create new lisitings</button>
    </form> -->
    <div id="filters" class="flex-nowrap types">
        <div class="types overflow-auto flex-nowrap col-md-8">
            <a class="filter" href="/listings/:id/reviews/trending">
                <div><i class="fa-solid fa-fire"></i></div>
                <p>Trending</p>
            </a>
            <a class="filter" href="/listings?category=Rooms">
                <div><i class="fa-solid fa-bed"></i></div>
                <p>Rooms</p>
            </a>
            <a href="/listings?category=Iconic Cities" class="filter">
                <div><i class="fa-solid fa-mountain-city"></i></div>
                <p>Iconic Cities</p>
            </a>
            <a class="filter" href="/listings?category=Mountain">
                <div><i class="fa-solid fa-mountain"></i></div>
                <p>Mountains</p>
            </a>
            <a class="filter" href="/listings?category=Castles">
                <div><i class="fa-brands fa-fort-awesome"></i></div>
                <p>Castles</p>
            </a>
            <a class="filter" href="/listings?category=Amazing Pools">
                <div><i class="fa-solid fa-person-swimming"></i></div>
                <p>Amazing Pools</p>
            </a>
            <a class="filter" href="/listings?category=Camping">
                <div><i class="fa-solid fa-campground"></i></div>
                <p>Camping</p>
            </a>
            <a class="filter" href="/listings?category=Farms">
                <div><i class="fa-solid fa-cow"></i></div>
                <p>Farms</p>
            </a>
            <a class="filter" href="/listings?category=Arctic">
                <div><i class="fa-solid fa-snowflake"></i></div>
                <p>Arctic</p>
            </a>
            <a class="filter" href="/listings?category=Domes">
                <div><i class="fa-solid fa-igloo"></i></div>
                <p>Domes</p>
            </a>
            <a class="filter" href="/listings?category=Boats">
                <div><i class="fa-solid fa-ship"></i></div>
                <p>Boats</p>
            </a>
        </div>

        <div class="tax-toggle cols-md-3 ms-6 tax-switch">
            <div class="form-check-reverse form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
                <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
            </div>
        </div>
    </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
        <% for(let listing of listings){ %>
            <a href="/listings/<%=listing._id%>" class="listing-link">
                <div class="card listing-card">
                    <img src="<%=listing.image.url%>" class="card-img-top" alt="listing_image" />
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b>
                                <%= listing.title %>
                            </b><br>
                            &#8377; <%= listing.price.toLocaleString("en-IN") %> / night
                            <i class="tax-info">&nbsp;+18% GST</i>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>

